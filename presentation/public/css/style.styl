@import 'vars'
@import 'nib'

// Reset
global-reset()
reset-html5()

// Layout
body
  background darken(#fff, 85)
  color darken(#fff, 10)
  font 14px/1.4 Roboto, sans-serif
  text-shadow 0 1px 1px rgba(0,0,0,.5)

.main-wrapper
  padding u*4
  margin auto
  max-width 1200px

.main-header
  margin-top -(u*4)
  padding u*4
  position fixed
  width columnwidth
  box-sizing border-box
  border-radius 0 0 u u
  background rgba(0,0,0,.3)
  box-shadow inset 0 -1px 3px rgba(0,0,0,.5)

  .heading
    color #fff
    font-size 24px
    font-weight 100
    line-height 1
    text-transform uppercase
    margin-bottom u*3
    padding-bottom u*3
    border-bottom 1px dotted #ccc

  .link
    color c-blue
    text-decoration none

    &:hover
      text-decoration underline

.main-nav
  margin-bottom u*2
  padding-bottom u*3
  border-bottom 1px dotted #ccc

  .item
    color #666
    list-style lower-alpha inside

.main-content
  margin-left columnwidth + u*4

  > .item
    list-style lower-alpha inside
    margin-top u*6
    color #666

    &:first-child
      margin-top 0

  .heading
    color c-yellow
    font-size 24px
    font-weight 700
    border-bottom 1px dotted #666
    margin-bottom u*2
    padding-bottom u*2
    font-weight 100

  .content
    color #fff

.sub-content
  color darken(#fff, 20)
  padding u u*4

  > .item
    list-style decimal inside
    margin-top u*4

    &:first-child
      margin-top u*2

  .sub-heading, .sub-heading-2
    font-weight 700

  .description, .sub-heading-2
    padding u u*3

  .code
    color #fff
    background rgba(0,0,0,.3)
    box-shadow inset 0 0 3px rgba(0,0,0,.5)
    border-radius u
    padding u*3
    margin u*2
    font-family monospace
    white-space pre-wrap

    .comment
      color #666

  .obs
    color #999
    padding 0 u*4
    font-size 12px
